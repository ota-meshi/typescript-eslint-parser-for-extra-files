{
  "compilerOptions": {
    "target": "es2015",
    "strict": true,
    "lib": ["es2020", "DOM"],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "declaration": true,
    "isolatedDeclarations": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.vue",
    "tests/**/*.svelte",
    "tests/**/*.astro",
    "tools/**/*.ts",
    "tsdown.config.mts"
  ]
}
